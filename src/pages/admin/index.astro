<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://unpkg.com/@staticcms/app@^2.0.0/dist/main.css" />
    <title>Content Manager</title>
</head>
<body>
<script src="https://unpkg.com/@staticcms/app@^2.0.0/dist/static-cms-app.js" is:inline></script>
<script is:inline>
    window.CMS.init({
        config: {
            name: 'Static CMS',
            backend: {
                //name: 'git-gateway',
                name: 'github',
                repo: 'defkil/sheatsheets',
                site_domain: '237cff2f-9de5-48ae-a5b2-765362ab7d92'
            },
            local_backend: true,
            media_folder: '/public/media',
            public_folder: '/public',
            collections: [
                {
                    name: 'posts',
                    label: 'Posts',
                    folder: 'src/content/docs/en',
                    create: true,
                    slug: "{{slug}}",
                    fields: [
                        {
                            label: 'Title',
                            name: 'title',
                            widget: 'string'
                        },
                        {
                            label: 'Description',
                            name: 'description',
                            widget: 'string',
                        },
                        {
                            label: 'Body',
                            name: 'body',
                            widget: 'markdown'
                        }
                    ]
                }
            ]
        }
    });
</script>
</body>
</html>
